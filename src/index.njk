---
layout: layouts/base.njk
title: Home
description: Archimmersion homepage
bodyClass: home-page
---
<div id="top" class="top-anchor" aria-hidden="true"></div>

<section class="home-hero" aria-label="Homepage intro">
  <div class="wordmark-wrap" aria-label="Archimmersion wordmark">
    <svg
      class="wordmark"
      viewBox="0 0 960 180"
      role="img"
      aria-labelledby="wordmark-title"
    >
      <title id="wordmark-title">Archimmersion</title>
      <text x="50%" y="50%" text-anchor="middle" dominant-baseline="middle">
        Archimmersion
      </text>
    </svg>
  </div>

  <p class="subtitle" aria-label="Core areas">
    <a class="subtitle-word" href="#design" data-expand-link="design">Design</a>
    <a class="subtitle-word" href="#representation" data-expand-link="representation">
      Representation
    </a>
    <a class="subtitle-word" href="#communication" data-expand-link="communication">
      Communication
    </a>
  </p>
</section>

<section class="sections-grid" aria-label="Core sections">
  {% for section in collections.sections %}
  <article class="section-card" id="{{ section.data.sectionKey }}">
    <h2>{{ section.data.title }}</h2>

    {% if section.data.heroImage %}
    <img
      class="section-image"
      src="{{ section.data.heroImage | resolvePageAsset(section.url) }}"
      alt="{{ section.data.title }} preview"
      loading="lazy"
    />
    {% else %}
    <div
      class="section-image section-image--placeholder"
      role="img"
      aria-label="Placeholder for {{ section.data.title }}"
    ></div>
    {% endif %}

    <ul class="section-links">
      <li><a href="{{ section.url }}">Explore {{ section.data.title }}</a></li>
      {% for link in section.data.links or [] %}
      <li><a href="{{ link.url }}">{{ link.label }}</a></li>
      {% endfor %}
    </ul>
  </article>
  {% endfor %}
</section>
