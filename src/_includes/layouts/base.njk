<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% if title %}{{ title }} | {% endif %}{{ site.name }}</title>
    <meta
      name="description"
      content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}"
    />
    <script>
      (function () {
        var previewHost = "{{ runtime.previewHost }}";
        var previewPath = "{{ runtime.previewPath }}";
        var onPreviewHost = window.location.hostname === previewHost;
        var onPreviewPath =
          window.location.pathname === previewPath.slice(0, -1) ||
          window.location.pathname.indexOf(previewPath) === 0;
        var base = document.createElement("base");
        base.href = onPreviewHost && onPreviewPath ? previewPath : "/";
        document.head.appendChild(base);
      })();
    </script>
    <link rel="stylesheet" href="assets/css/site.css" />
  </head>
  <body
    class="{% if bodyClass %}{{ bodyClass }}{% endif %}"
    data-palette="{{ site.palette or 'colorful' }}"
    data-background-style="{{ site.backgroundStyle or 'flat' }}"
  >
    <a class="skip-link" href="#main-content">Skip to content</a>

    {% if page.url != "/" %}
    <header class="subpage-topbar" aria-label="Section menu">
      <div class="subpage-topbar-inner">
        <nav class="subpage-nav" aria-label="Sections">
          <a href="design/" {% if page.url == "/design/" %}aria-current="page"{% endif %}>Design</a>
          <a href="representation/" {% if page.url == "/representation/" %}aria-current="page"{% endif %}>Representation</a>
          <a href="communication/" {% if page.url == "/communication/" %}aria-current="page"{% endif %}>
            Communication
          </a>
        </nav>

        <a class="subpage-wordmark" href="./" aria-label="Archimmersion home">Archimmersion</a>
        <span class="subpage-topbar-spacer" aria-hidden="true"></span>
      </div>
    </header>
    {% endif %}

    <main id="main-content" class="site-main{% if page.url == "/" %} site-main--home{% endif %}">
      {% if page.url == "/" %}
      {{ content | safe }}
      {% else %}
      <article class="markdown-body">
        <h1>{{ title }}</h1>
        {{ content | safe }}
      </article>
      {% endif %}
    </main>

    <footer class="site-footer">
      <p>&copy; {{ site.year }} {{ site.name }}</p>
    </footer>

    <script src="assets/js/site.js" defer></script>
    {% if page.url != "/" %}
    <script src="assets/js/carousel.js" defer></script>
    {% endif %}
  </body>
</html>
