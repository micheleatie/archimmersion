<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% if title %}{{ title }} | {% endif %}{{ site.name }}</title>
    <meta
      name="description"
      content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}"
    />
    <link rel="stylesheet" href="/assets/css/site.css" />
  </head>
  <body class="{% if bodyClass %}{{ bodyClass }}{% endif %}">
    <a class="skip-link" href="#main-content">Skip to content</a>

    {% if page.url != "/" %}
    <header class="titlebar" aria-label="Section menu">
      <nav class="titlebar-nav" aria-label="Homepage anchors">
        <a href="/#design">Design</a>
        <a href="/#representation">Representation</a>
        <a href="/#communication">Communication</a>
        <a href="/#top">Top</a>
      </nav>
    </header>
    {% endif %}

    <main id="main-content" class="site-main{% if page.url == "/" %} site-main--home{% endif %}">
      {% if page.url == "/" %}
      {{ content | safe }}
      {% else %}
      <article class="markdown-body">
        <h1>{{ title }}</h1>
        {{ content | safe }}
      </article>
      {% endif %}
    </main>

    <footer class="site-footer">
      <p>&copy; {{ site.year }} {{ site.name }}</p>
    </footer>

    <script src="/assets/js/site.js" defer></script>
    {% if page.url != "/" %}
    <script src="/assets/js/carousel.js" defer></script>
    {% endif %}
  </body>
</html>
